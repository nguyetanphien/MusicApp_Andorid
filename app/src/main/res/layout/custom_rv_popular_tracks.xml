<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="#26292D">

    <TextView
        android:id="@+id/txtStt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_toRightOf="@+id/txtStt"
        app:cardCornerRadius="@dimen/_7sdp">

        <ImageView
            android:id="@+id/imgPopularTrack"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNamePT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/cv"
        android:text="Redbone"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/imgbtnChosse"
        android:text="6:15"
        android:background="@color/wnull"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
         />

    <ImageButton
        android:id="@+id/imgbtnChosse"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_3sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/wnull"
        android:src="@mipmap/options" />

</RelativeLayout>