<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="37dp"
    android:layout_marginBottom="20dp"
    android:background="#26292D"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgFavoriteTrack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameFTrack"
            android:layout_width="116dp"
            android:layout_height="15dp"
            android:text="Redbone"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNameSingerFTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name song"
            android:textColor="#9F9898"
            android:textSize="11dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/txtTimeFTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/ibtnChosseFTrack"
        android:text="6:15"
        android:textColor="@color/white"
        android:textSize="13dp"
        tools:ignore="NotSibling" />

    <ImageButton
        android:id="@+id/ibtnChosseFTrack"
        android:layout_width="16dp"
        android:layout_height="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:src="@mipmap/options" />

</RelativeLayout>