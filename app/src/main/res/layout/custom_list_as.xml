<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:background="#26292D">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPositionAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_toRightOf="@+id/txtPositionAS"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNameSongAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redbone"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNameSingerAS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name song"
            android:textColor="#9F9898"
            android:textSize="@dimen/_11sdp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTimeAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_toLeftOf="@+id/ibtnChosseAS"
        android:text="6:15"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibtnChosseAS"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_6sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@mipmap/options" />

</RelativeLayout>